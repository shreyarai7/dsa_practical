#include <stdio.h>

int main() {
    int p1[10], p2[10], sum[10];
    int i, n;

    printf("Enter highest degree of polynomial: ");
    scanf("%d", &n);

    printf("Enter coefficients of first polynomial:\n");
    for (i = 0; i <= n; i++) {
        printf("Coefficient of x^%d: ", i);
        scanf("%d", &p1[i]);
    }

    printf("Enter coefficients of second polynomial:\n");
    for (i = 0; i <= n; i++) {
        printf("Coefficient of x^%d: ", i);
        scanf("%d", &p2[i]);
    }

    for (i = 0; i <= n; i++) {
        sum[i] = p1[i] + p2[i];
    }

    printf("\nSum of polynomials:\n");
    for (i = n; i >= 0; i--) {
        if (sum[i] != 0) {
            printf("%dx^%d", sum[i], i);
            if (i != 0)
                printf(" + ");
        }
    }

    return 0;
}
